@model IEnumerable<ShopDienThoaiConnection.HangSP>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}

<h2>TRANG CHỦ</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <label class="control-label col-lg-2">Mã hãng</label>
        </th>
        <th>
            <label class="control-label col-lg-2">Tên hãng</label>
        </th>
        <th>
            <label class="control-label col-lg-2">Bị xóa</label>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaHang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenHang)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BiXoa)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.MaHang }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.MaHang }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.MaHang })
        </td>
    </tr>
}

</table>
